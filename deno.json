{
  "tasks": {
    "build": "deno cache ./supabase/functions/eng-dic-bot/deps.ts",
    "dev": "supabase functions serve --no-verify-jwt --env-file ./supabase/functions/eng-dic-bot/.env eng-dic-bot",
    "deploy": "supabase functions deploy eng-dic-bot --no-verify-jwt",
    "gen": "supabase gen types typescript --project-id yxruvgnitxbcbmiaovdz  --schema public > ./supabase/functions/eng-dic-bot/types/supabase.ts"

  },
  "compilerOptions": {
    "allowJs": false,
    "lib": ["deno.window"],
    "strict": true
  },
  "lint": {
    "include": ["supabase/functions"],
    "exclude": ["src/testdata/"],
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"],
      "exclude": ["no-unused-vars"]
    }
  },
  "fmt": {
    "useTabs": true,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["supabase/functions"],
    "exclude": ["supabase/testdata/"]
  },
  "test": {
    "include": ["supabase/"],
    "exclude": ["supabase/testdata/"]
  }
}
